#!/bin/bash

if [[ $1 == "-"*  ]]; then
	OPT=$1
	FILE=$2
else
	FILE=$1
fi

extension="${FILE##*.}"
FILE="${FILE%.*}"

EXT=svg

if [[ $OPT == "-"*"c"*  ]]; then
	dot -Kfdp -n -T$EXT -o $FILE.$EXT $FILE.dot
	FLAG="-Kfdp -n"
else
	FLAG=""
fi

dot $FLAG -T$EXT -o $FILE.$EXT $FILE.dot

if [[ $EXT == "svg" ]]; then
  mv $FILE.$EXT $FILE.html
fi

## Do not open
#if [[ $OPT == "-"*"n"*  ]]; then
